{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/!(docs)"
  ],
  "scripts": {
    "build:es": "lerna run --stream build:es",
    "build:umd": "lerna run --stream build:umd",
    "build:docs": "lerna run --stream build:docs",
    "clean": "lerna run --stream clean",
    "cz": "git-cz",
    "link": "lerna exec --stream --ignore @oidajs/docs -- npm link",
    "postlink": "rimraf \"packages/!(docs)/node_modules\" \"packages/!(docs)/package-lock.json\"",
    "lint:check": "lerna run --stream lint:check",
    "lint:fix": "lerna run --stream lint:fix",
    "watch": "lerna run --stream --concurrency 100 watch",
    "test": "lerna run --stream test",
    "typedoc": "typedoc --tsconfig ./tsconfig.typedoc.json",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "eslint"
    ],
    "packages/*/src/**/*.{ts, tsx}": [
      "npm run test -ws -- --passWithNoTests --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@ant-design/compatible": "^5.1.1",
    "@babel/preset-env": "7.20.2",
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@svgr/cli": "^6.5.1",
    "@types/chroma-js": "^2.1.4",
    "@types/geojson": "^7946.0.8",
    "@types/jest": "^29.2.5",
    "@types/lodash": "^4.14.191",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "antd": "^5.6.2",
    "cesium": "^1.101.0",
    "classnames": "^2.3.2",
    "commitizen": "^4.2.6",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^6.4.0",
    "lint-staged": "^13.1.0",
    "lodash": "^4.17.21",
    "mobx": "^6.7.0",
    "mobx-react": "^7.6.0",
    "moment": "^2.29.4",
    "ol": "^7.2.2",
    "prettier": "^2.8.2",
    "proj4": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.6.2",
    "react-router-dom": "^6.6.2",
    "replace-in-file": "^6.3.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.4",
    "tslib": "^2.4.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4"
  }
}

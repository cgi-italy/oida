    "rollup-plugin-typescript2": "^0.22.1",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-import-plugin": "^1.5.5",
    "ts-jest": "^24.0.2",
    "tslint": "^5.11.0",
    "typescript": "~3.4.5",
    "webpack": "^4.25.1",
    "webpack-bundle-analyzer": "^3.0.2",

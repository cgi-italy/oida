{
  "name": "root",
  "private": true,
  "scripts": {
    "build:es": "lerna run --stream build:es",
    "build:umd": "lerna run --stream build:umd",
    "build:docs": "lerna run --stream build:docs",
    "clean": "lerna run --parallel clean",
    "cz": "git-cz",
    "link": "lerna exec --stream --ignore @oidajs/docs -- npm link",
    "postlink": "rimraf \"packages/!(docs)/node_modules\" \"packages/!(docs)/package-lock.json\"",
    "lint:check": "eslint \"packages/*/src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,tsx}\" --quiet --fix",
    "check-staged": "lint-staged",
    "watch": "lerna run --parallel watch",
    "test": "lerna run --parallel test",
    "typedoc": "typedoc --tsconfig ./tsconfig.typedoc.json"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "node_modules/.bin/eslint --"
    ],
    "packages/*/src/**/*.{ts, tsx}": [
      "lerna run --parallel test -- -- --findRelatedTests"
    ]
  },
